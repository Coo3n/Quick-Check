<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.example.quick_cheque.screens.main_pages_fragments.MainScreenFragment"
        android:label="Комнаты"
        tools:layout="@layout/fragment_main_screen">
        <action
            android:id="@+id/action_mainScreenFragment_to_choiceRoomFragment"
            app:destination="@id/choiceRoomFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_profileScreenFragment"
            app:destination="@id/profileScreenFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_joinScreenFragment"
            app:destination="@id/joinScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/joinScreenFragment"
        android:name="com.example.quick_cheque.screens.main_pages_fragments.JoinScreenFragment"
        android:label=" "
        tools:layout="@layout/fragment_join_screen"/>
    <fragment
        android:id="@+id/profileScreenFragment"
        android:name="com.example.quick_cheque.screens.main_pages_fragments.ProfileScreenFragment"
        android:label=" "
        tools:layout="@layout/fragment_profile_screen">
        <action
            android:id="@+id/action_profileScreenFragment_to_fragmentSettings"
            app:destination="@id/fragmentSettings" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.quick_cheque.screens.auth_pages_fragment.LoginFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.quick_cheque.screens.auth_pages_fragment.RegisterFragment"
        android:label="Регистрация"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/choiceChequeFragment"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.ChoiceChequeFragment"
        android:label="Чек"
        tools:layout="@layout/fragment_choice_cheque">
        <action
            android:id="@+id/action_choiceChequeFragment_to_choiceProductFragment"
            app:destination="@id/choiceProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/choiceProductFragment"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.ChoiceProductFragment"
        android:label="Чек"
        tools:layout="@layout/fragment_choice_product">
        <action
            android:id="@+id/action_choiceProductFragment_to_distributedProductsChequeFragments"
            app:destination="@id/distributedProductsChequeFragments" />
    </fragment>
    <fragment
        android:id="@+id/distributedProductsChequeFragments"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.DistributedProductsChequeFragments"
        android:label="Чек"
        tools:layout="@layout/fragment_distributed_products_cheque_fragments">
        <action
            android:id="@+id/action_distributedProductsChequeFragments_to_waitPaymentFragment"
            app:destination="@id/waitPaymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/waitPaymentFragment"
        android:name="com.example.quick_cheque.screens.payment_cheque_fragments.WaitPaymentFragment"
        android:label="Оплата"
        tools:layout="@layout/fragment_wait_payment">
        <action
            android:id="@+id/action_waitPaymentFragment_to_distributedProductsChequeFragments"
            app:destination="@id/distributedProductsChequeFragments" />
        <action
            android:id="@+id/action_waitPaymentFragment_to_paymentChequeFragment"
            app:destination="@id/paymentChequeFragment" />
    </fragment>
    <fragment
        android:id="@+id/paymentChequeFragment"
        android:name="com.example.quick_cheque.screens.payment_cheque_fragments.PaymentChequeFragment"
        android:label="Оплата"
        tools:layout="@layout/fragment_payment_cheque"/>
    <fragment
        android:id="@+id/fragmentSettings"
        android:name="com.example.quick_cheque.screens.main_pages_fragments.FragmentSettings"
        android:label="Настройки"/>
    <fragment
        android:id="@+id/choiceRoomFragment"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.ChoiceRoomFragment"
        android:label="Комнаты"
        tools:layout="@layout/fragment_choice_room" >
        <action
            android:id="@+id/action_choiceRoomFragment_to_choiceChequeFragment"
            app:destination="@id/choiceChequeFragment" />
    </fragment>
    <fragment
        android:id="@+id/createScreenFragment"
        android:name="com.example.quick_cheque.screens.main_pages_fragments.CreateScreenFragment"
        android:label="CreateScreenFragment" />

</navigation>