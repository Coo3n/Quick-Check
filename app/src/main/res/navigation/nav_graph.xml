<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/paymentChequeFragment">
    <fragment
        android:id="@+id/paymentChequeFragment"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.PaymentChequeFragment"
        android:label="fragment_payment_cheque"
        tools:layout="@layout/fragment_payment_cheque">
        <action
            android:id="@+id/action_paymentChequeFragment_to_choicePaymentFragment"
            app:destination="@id/choicePaymentFragment" />
    </fragment>

    <fragment
        android:id="@+id/choicePaymentFragment"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.ChoicePaymentFragment"
        android:label="ChoicePaymentFragment" >
        <action
            android:id="@+id/action_choicePaymentFragment_pop"
            app:popUpTo="@id/choicePaymentFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>