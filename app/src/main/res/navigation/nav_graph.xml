<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registerFragment">

    <fragment
        android:id="@+id/mainScreenFragment"
        android:name="com.example.quick_cheque.screens.MainScreenFragment"
        android:label="fragment_main_screen"
        tools:layout="@layout/fragment_main_screen" >
        <action
            android:id="@+id/action_mainScreenFragment_to_joinScreenFragment"
            app:destination="@id/joinScreenFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainScreenFragment_to_profileScreenFragment"
            app:destination="@id/profileScreenFragment" />
        <action
            android:id="@+id/action_mainScreenFragment_to_choiceChequeFragment"
            app:destination="@id/choiceChequeFragment" />
    </fragment>
    <fragment
        android:id="@+id/joinScreenFragment"
        android:name="com.example.quick_cheque.screens.main_pages_fragments.JoinScreenFragment"
        android:label="fragment_join_screen"
        tools:layout="@layout/fragment_join_screen" >
        <action
            android:id="@+id/action_joinScreenFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileScreenFragment"
        android:name="com.example.quick_cheque.screens.main_pages_fragments.ProfileScreenFragment"
        android:label="fragment_profile_screen"
        tools:layout="@layout/fragment_profile_screen" >
        <action
            android:id="@+id/action_profileScreenFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.quick_cheque.screens.auth_pages_fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.quick_cheque.screens.auth_pages_fragment.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/choiceChequeFragment"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.ChoiceChequeFragment"
        android:label="fragment_choice_cheque"
        tools:layout="@layout/fragment_choice_cheque" >
        <action
            android:id="@+id/action_choiceChequeFragment_to_mainScreenFragment"
            app:destination="@id/mainScreenFragment" />
        <action
            android:id="@+id/action_choiceChequeFragment_to_choiceProductFragment"
            app:destination="@id/choiceProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/choiceProductFragment"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.ChoiceProductFragment"
        android:label="fragment_distributed_cheque"
        tools:layout="@layout/fragment_distributed_cheque" >
        <action
            android:id="@+id/action_choiceProductFragment_to_choiceChequeFragment"
            app:destination="@id/choiceChequeFragment" />
        <action
            android:id="@+id/action_choiceProductFragment_to_distributedChequeFragment"
            app:destination="@id/distributedChequeFragment" />
    </fragment>
    <fragment
        android:id="@+id/distributedChequeFragment"
        android:name="com.example.quick_cheque.screens.room_cheque_fragments.DistributedChequeFragment"
        android:label="DistributedChequeFragment" >
        <action
            android:id="@+id/action_distributedChequeFragment_to_choiceProductFragment"
            app:destination="@id/choiceProductFragment" />
    </fragment>
</navigation>