<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LayoutBackgroundColor"
    tools:context=".presentation.screen.main_pages_fragments.ProfileScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fragment_profile_top"
            style="@style/profile_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/fragment_profile_background"
            style="@style/profile_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            style="@style/profile_change_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/fragment_profile_user_picture"
            style="@style/profile_user_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/profile_user_name"
            app:layout_constraintStart_toEndOf="@id/fragment_profile_user_picture"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            style="@style/profile_id"
            app:layout_constraintBottom_toBottomOf="@id/fragment_profile_user_id"
            app:layout_constraintEnd_toStartOf="@id/fragment_profile_user_id" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fragment_profile_user_id"
            style="@style/profile_user_id"
            app:layout_constraintBottom_toTopOf="@id/fragment_profile_background"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fragment_profile_opt_friends"
            style="@style/profile_option"
            android:layout_marginTop="15dp"
            android:text="@string/profile_opt_friends"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fragment_profile_background" />

        <FrameLayout
            style="@style/profile_black_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_opt_friends" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fragment_profile_opt_history"
            style="@style/profile_option"
            android:text="@string/profile_opt_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_opt_friends" />

        <FrameLayout
            style="@style/profile_black_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_opt_history" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fragment_profile_opt_card"
            style="@style/profile_option"
            android:text="@string/profile_opt_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_opt_history" />


        <FrameLayout
            style="@style/profile_black_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_opt_card" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fragment_profile_logout"
            style="@style/profile_option"
            android:text="@string/profile_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_opt_card" />

        <FrameLayout
            style="@style/profile_black_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_logout"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchThemeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:thumb="@drawable/thumb_layerlist"
            app:layout_constraintTop_toBottomOf="@id/fragment_profile_logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:showText="false"
            app:track="@drawable/track_backgrounds" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchLanguageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:thumb="@drawable/thumb_layerlist_lang"
            app:layout_constraintTop_toBottomOf="@id/switchThemeBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:showText="false"
            app:track="@drawable/track_lang" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>