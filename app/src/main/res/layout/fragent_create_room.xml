<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/create_room_fragment"
    tools:context=".screens.MainScreenFragment">

    <FrameLayout
        android:id="@+id/fragment_profile_top"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/purple_700">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp">

        <TextView
            android:id="@+id/create_room_string"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:text="@string/create_room"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/new_room_string"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:gravity="top"
            android:text="@string/room_name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/membersTextCheque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="13dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/participants"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="30dp">

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/listChequeMembers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/buttonAddNewMembersInCheque"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/list_member_item" />

            <ImageButton
                android:id="@+id/buttonAddNewMembersInCheque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:background="@drawable/button_add_new_members_cheque"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="ContentDescription,HardcodedText,TouchTargetSizeCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonCreateRoom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/style_orange_button_next"
        android:gravity="center"
        android:paddingTop="1dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="8dp"
        android:text="@string/create_roo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_gravity="bottom"
        android:textSize="22sp" />

</FrameLayout>