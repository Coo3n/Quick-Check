<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemViewCheque"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapperListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/listItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/style_cheque_card_expandable"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/titleListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="9dp"
                android:paddingBottom="12dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/verticalDividingLine"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Закуски" />


            <View
                android:id="@+id/verticalDividingLine"
                android:layout_width="1dp"
                android:layout_height="54dp"
                android:background="@color/gray_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/expandableButton"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/expandableButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/style_beige_expandable_button"
                android:contentDescription="Expand INFORMATION of cheque"
                android:scaleType="center"
                android:src="@drawable/expand_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/fullInformationOfCheque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_cheque"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listItem">

            <TextView
                android:id="@+id/firstDividingStripInInfoCheque"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_black" />

            <TextView
                android:id="@+id/textAdminCheque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/admin"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="13dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconAdminInCheque"
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mini_user_icon"
                    android:contentDescription="Icon user"
                    android:scaleType="fitXY"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/nameOwnerCheque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    tools:text="Владислав. Д" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/dividing_line_with_spaces"
                android:backgroundTint="@color/black"
                android:contentDescription="dividing_line_with_spaces"
                android:scaleType="center" />

            <TextView
                android:id="@+id/membersTextCheque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/participants"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="30dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listChequeMembers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/buttonAddNewMembersInCheque"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/list_member_item" />

                <ImageButton
                    android:id="@+id/buttonAddNewMembersInCheque"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_add_new_members_cheque"
                    android:contentDescription="TODO"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ContentDescription,HardcodedText" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/dividing_line_with_spaces"
                android:backgroundTint="@color/black"
                android:contentDescription="dividing_line_with_spaces"
                android:scaleType="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/sumOfChequeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/sumOfCheque"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/finalSumOfCheque"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/style_toolbar_search_item"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                tools:text="100000000000000000000 р" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>