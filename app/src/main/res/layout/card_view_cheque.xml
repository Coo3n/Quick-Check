<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemViewCheque"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrapperListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/listItem"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/custom_layer_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/titleListItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="9dp"
                android:paddingBottom="12dp"
                android:text="Закуски"
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/expandButton"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/expandButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@color/beige"
                android:contentDescription="Expand INFORMATION of cheque"
                android:scaleType="center"
                android:src="@drawable/expand_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/fullInformationOfCheque"
            android:layout_width="match_parent"
            android:layout_height="286dp"
            android:background="@drawable/background_info_cheque"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/listItem">

            <TextView
                android:id="@+id/firstDividingStripInInfoCheque"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="13dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/wrapperText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Админ"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="13dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mini_user_icon"
                    android:contentDescription="Icon user"
                    android:scaleType="fitXY"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/nameOwnerCheque"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Владислав. Д"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/dividing_line_with_spaces"
                android:backgroundTint="@color/black"
                android:contentDescription="dividing_line_with_spaces"
                android:scaleType="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Участники"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="13dp"
                android:background="@drawable/mini_user_icon"
                android:contentDescription="Icon user"
                android:scaleType="fitXY"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/dividing_line_with_spaces"
                android:backgroundTint="@color/black"
                android:contentDescription="dividing_line_with_spaces"
                android:scaleType="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Сумма чека"
                android:textColor="@color/black"
                android:textSize="19sp"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sumOfCheque"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:background="@drawable/style_for_toolbar_search"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="100000000000000000000 р"
                android:textColor="@color/black"
                android:textSize="22sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>