<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_bottom_height"
    tools:context=".navs.NavBottom">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/nav_bottom_profile"
        android:layout_width="@dimen/nav_bottom_height"
        android:layout_height="@dimen/nav_bottom_height"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/nav_bottom_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nav_bottom_profile_icon" />

        <TextView
            android:id="@+id/nav_bottom_profile_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_bottom_profile_text" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/nav_bottom_create"
        android:layout_width="@dimen/nav_bottom_height"
        android:layout_height="@dimen/nav_bottom_height"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/nav_bottom_create_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nav_bottom_create_icon" />

        <TextView
            android:id="@+id/nav_bottom_create_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_bottom_create_text" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/nav_bottom_join"
        android:layout_width="@dimen/nav_bottom_height"
        android:layout_height="@dimen/nav_bottom_height"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/nav_bottom_join_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/nav_bottom_join_icon" />

        <TextView
            android:id="@+id/nav_bottom_join_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nav_bottom_join_text" />
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>