<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context=".screens.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="442dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="119dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_register_auth_switch"
            android:layout_width="253dp"
            android:layout_height="37dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="35dp"
            android:background="@color/gray_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_login_email_field"
            app:layout_constraintEnd_toEndOf="@+id/fragment_login_email_field"
            app:layout_constraintStart_toStartOf="@+id/fragment_login_email_field" />

        <EditText
            android:id="@+id/fragment_login_email_field"
            android:layout_width="295dp"
            android:layout_height="37dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gray_light"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Password"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragment_login_password_1_field"
            app:layout_constraintEnd_toEndOf="@+id/fragment_login_password_1_field"
            app:layout_constraintStart_toStartOf="@+id/fragment_login_password_1_field" />

        <EditText
            android:id="@+id/fragment_login_password_1_field"
            android:layout_width="295dp"
            android:layout_height="37dp"
            android:layout_marginTop="40dp"
            android:background="@color/gray_light"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_login_email_field"
            app:layout_constraintStart_toStartOf="@+id/fragment_login_email_field"
            app:layout_constraintTop_toBottomOf="@+id/fragment_login_email_field" />

        <TextView
            android:id="@+id/fragment_login_forgot_btn"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Forgot password"
            android:textColor="@color/blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/fragment_login_password_1_field"
            app:layout_constraintStart_toStartOf="@+id/fragment_login_password_1_field"
            app:layout_constraintTop_toBottomOf="@+id/fragment_login_password_1_field" />

        <Button
            android:id="@+id/fragment_login_login_btn"
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:layout_marginBottom="46dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="19dp"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/fragment_login_password_1_field"
            app:layout_constraintStart_toStartOf="@+id/fragment_login_password_1_field" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>