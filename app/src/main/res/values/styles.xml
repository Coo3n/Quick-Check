<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="auth_bottom_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">40dp</item>
        <item name="android:layout_marginBottom">45dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">1000dp</item>
    </style>

    <style name="auth_field_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="auth_field_new">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/light_gray_corner_radius_6dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconTint">@color/gray_black</item>
    </style>

    <style name="auth_field_text_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:background">@drawable/light_gray_corner_radius_6dp</item>
    </style>

    <style name="auth_switch_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">125dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="auth_background">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginVertical">100dp</item>
        <item name="android:background">@drawable/white_corner_radius_6dp</item>
    </style>

    <style name="auth_switch_background">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">35dp</item>
        <item name="android:background">@drawable/light_gray_corner_radius_6dp</item>
    </style>

    <style name="auth_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:background">@color/gray_light</item>
        <item name="android:maxWidth">400dp</item>
    </style>

    <style name="profile_option">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <style name="profile_black_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="bottom_sheet_dialog_theme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottom_sheet_dialog_style</item>
    </style>

    <style name="bottom_sheet_dialog_style"
        parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/rounded_dialog</item>
    </style>
</resources>