<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="auth_bottom_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">1000dp</item>
    </style>

    <style name="auth_field_text">
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="auth_field_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/light_gray_corner_radius_6dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconTint">@color/gray_black</item>
    </style>

    <style name="auth_field_text_new">
        <item name="android:backgroundTint">@color/AuthInputTintColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">10dp</item>

        <item name="android:background">@drawable/light_gray_corner_radius_6dp</item>
    </style>

    <style name="auth_switch_btn">
        <item name="android:backgroundTint">@color/ButtonColorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">6dp</item>
    </style>

    <style name="auth_background">
        <item name="android:background">@drawable/white_corner_radius_6dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="auth_switch_background">
        <item name="android:backgroundTint">@color/AuthInputTintColor</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:background">@drawable/light_gray_corner_radius_6dp</item>
    </style>

    <style name="auth_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@color/BackGroundColorAuth</item>
        <item name="android:maxWidth">400dp</item>
    </style>

    <style name="profile_option">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/TextColorPrimary</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="profile_black_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="bottom_sheet_dialog_theme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottom_sheet_dialog_style</item>
    </style>

    <style name="bottom_sheet_dialog_style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="profile_top">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/ProfileBackgroundColor</item>
    </style>

    <style name="profile_background">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">180dp</item>
        <item name="android:background">@drawable/fragment_profile_background</item>
    </style>

    <style name="profile_change_btn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:background">@color/BackgroundChangeButton</item>
        <item name="android:src">@drawable/baseline_edit_24</item>
        <item name="contentPadding">5dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent</item>
    </style>

    <style name="profile_user_picture">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/generic_avatar</item>
        <item name="contentPadding">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50Percent</item>
    </style>

    <style name="profile_user_name">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:text">@string/default_user_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="profile_id">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:text">@string/fragment_profile_id</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="profile_user_id">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:text">@string/default_user_id</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>